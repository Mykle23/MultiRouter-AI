# Server
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Authentication (leave empty to disable)
API_KEY=

# Rate Limiting (requests per minute per IP, 0 to disable)
RATE_LIMIT_MAX=100

# ── Providers ────────────────────────────────────────────────
# Only configure the ones you want to use.
# The model is optional — a sensible default is used if not set.

# Groq
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile

# Cerebras
CEREBRAS_API_KEY=
CEREBRAS_MODEL=llama-3.3-70b

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# OpenRouter
OPENROUTER_API_KEY=
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct

# Gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash
